@using BlockBase.Dapps.CloudManager.WebApp.Models.Nodes
@model ProducerConfigurationViewModel

<div class="d-flex flex-row bd-highlight mb-2">
    <div class="most-outer">
        <div class="outer-outer">
            <div class="outter-Stake">
                <div class="stake-text">Max Ratio to Stake</div>
                <div class="display-stake">
                    <div class="arrows p-2 bd-highlight">
                        <div class="up-arrow">
                            <form asp-controller="Nodes" asp-action="ProducerSetIncrementDecrementConfiguration" asp-route-isIncrement="true">
                                <input asp-for="Account" type="hidden" value="@Model.Account" />
                                <input asp-for="MaxRatioToStake" type="hidden" value="@Model.MaxRatioToStake" />
                                <button class="icon-button" type="submit">
                                    <i class="fas fa-caret-up fa-3x"></i>
                                </button>
                            </form>
                        </div>
                        <div class="down-arrow">
                            <form asp-controller="Nodes" asp-action="ProducerSetIncrementDecrementConfiguration" asp-route-isIncrement="false">
                                <input asp-for="Account" type="hidden" value="@Model.Account" />
                                <input asp-for="MaxRatioToStake" type="hidden" value="@Model.MaxRatioToStake" />
                                <button class="icon-button" type="submit">
                                    <i class="fas fa-caret-down fa-3x"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="stake-value">@Model.MaxRatioToStake</div>
                </div>
                <form asp-controller="Nodes" asp-action="ProducerSetConfigurations">
                    <input asp-for="Account" type="hidden" value="@Model.Account" />
                    <input asp-for="MaxRatioToStake" type="number" step=any min=0/>
                    <span asp-validation-for="MaxRatioToStake" class="text-danger"></span>
                    <input type="submit" value="Set" class="btn btn btn-dark" />
                </form>
            </div>
        </div>
    </div>

